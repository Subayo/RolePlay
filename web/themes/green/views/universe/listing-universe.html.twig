{% embed "@green/templates/table-panel.html.twig" %}
    {% block table_panel_title %}{{ 'label.universes'|trans }}{% endblock %}
    {% block table_panel_btn %}
        <a href="{{ path('appbundle_universe_add') }}" type="button" class="btn bg-teal btn-xs btn-labeled"><b><i class="icon-plus2"></i></b> {{ 'universe.label.create'|trans }}</a>
    {% endblock %}
    {% block table_panel_th %}
        <th>#</th>
        <th>{{ 'label.name'|trans }}</th>
        <th>{{ 'label.picture'|trans }}</th>
        <th>{{ 'label.display'|trans }}</th>
    {% endblock %}
    {% block table_panel_tr %}
        {% for universe in entity.universes %}
            <tr>
                <td><a href="{{ path('appbundle_universe_view',{'id':entity.id}) }}">{{ entity.id }}</a></td>
                <td><a href="{{ path('appbundle_universe_view',{'id':entity.id}) }}">{{ entity.name }}</a></td>
                <td>{{ entity.display }}</td>
            </tr>
        {% endfor %}
    {% endblock %}
{% endembed %}