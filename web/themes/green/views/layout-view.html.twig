{% extends "@green/layout.html.twig" %}

{% block class_body %}
    has-detached-right
{% endblock %}

{% block theme_js %}
    <script src="{{ asset('themes/green/js/plugins/datatables/datatables.min.js') }}"></script>
{% endblock %}

{% block title_page %}
    <span class="text-semibold">{{ (title~'.label.name')|trans }}</span> - {{ name|default('label.na'|trans) }}
{% endblock %}

{% block breadcrumb %}
    <li><a href="{{ path('appbundle_'~title~'_index') }}">{{ (title~'.label.name')|trans }}</a></li>
    <li class="active">{{ name|default('label.na'|trans) }}</li>
{% endblock breadcrumb %}

{% block main_container %}
    {% include "@green/templates/modal-remove.html.twig" %}
    <div class="container-detached">
        <div class="content-detached">
            <div class="row">
                <div class="panel panel-white">
                    <div class="panel-heading">
                        <h6 class="panel-title">{% block title_view %}{{ name|default('label.na'|trans) }}{% endblock %}</h6>
                        {% block heading_elements_main_panel %}
                            <div class="heading-elements">
                                <div class="heading-btn pull-right">
                                    {% block overload_heading_elements_main_panel %}{% endblock overload_heading_elements_main_panel %}
                                    <a href="{{ path('appbundle_'~title~'_edit', {'id': entity.id}) }}" type="button" class="btn bg-warning btn-xs btn-labeled"><b><i
                                                    class="icon-compose"></i></b> {{ 'label.edit'|trans }}</a>
                                    <button data-toggle="modal"
                                            data-target="#modal_theme_danger"
                                            data-action="{{ path('appbundle_'~title~'_remove', {'id' : entity.id}) }}"
                                            data-message="{{ (title~'.modal.delete')|trans }}"
                                            data-title="{{ (title~'.modal.title')|trans }} <b>{{ name|default('label.na'|trans) }}</b>"
                                            class="btn bg-danger btn-xs btn-labeled"><b><i class="icon-trash"></i></b>
                                        {{ 'label.delete'|trans }}
                                    </button>
                                </div>
                            </div>
                        {% endblock heading_elements_main_panel %}
                    </div>
                    {% block entity_view_container %}{% endblock entity_view_container %}
                    <div class="panel-footer">
                        <div class="heading-elements">
                            {% block heading_elements_panel_footer %}
                                <span class="heading-text text-semibold">
                                    {% if entity.createdAt is defined %}
                                        {{ 'label.created_by'|trans }} {{ entity.createdBy.username|default('label.na'|trans) }} {{ 'label.created_at'|trans }} {{ entity.createdAt ? entity.createdAt|date('d/m/y \Ã  H:i', 'Europe/Paris') : 'label.na'|trans }}
                                    {% endif %}
                                </span>
                                <div class="heading-btn pull-right">
                                    <a href="{{ path('appbundle_'~title~'_edit', {'id': entity.id}) }}" type="button" class="btn bg-warning btn-xs btn-labeled"><b><i
                                                    class="icon-compose"></i></b> {{ 'label.edit'|trans }}</a>
                                    <button data-toggle="modal"
                                            data-target="#modal_theme_danger"
                                            data-action="{{ path('appbundle_'~title~'_remove', {'id' : entity.id}) }}"
                                            data-message="{{ (title~'.modal.delete')|trans }}"
                                            data-title="{{ (title~'.modal.title')|trans }} <b>{{ name|default('label.na'|trans) }}</b>"
                                            class="btn bg-danger btn-xs btn-labeled"><b><i class="icon-trash"></i></b>
                                        {{ 'label.delete'|trans }}
                                    </button>
                                </div>
                            {% endblock heading_elements_panel_footer %}
                        </div>
                    </div>
                </div>
                {% block extra_entity_view_container %}{% endblock extra_entity_view_container %}
            </div>
        </div>
        <div class="sidebar-detached">
            <div class="sidebar sidebar-default">
                <div class="sidebar-content">
                    <!-- Action buttons -->
                    <div class="sidebar-category">
                        <div class="category-title">
                            <span>{{ 'label.quick_shortcut'|trans }}</span>
                            <ul class="icons-list">
                                <li><a href="#" data-action="collapse"></a></li>
                            </ul>
                        </div>

                        <div class="category-content">
                            <div class="row">
                                {% block quick_shortcut_table_container %}{% endblock %}
                            </div>
                            <ul class="navigation navigation-alt navigation-accordion">
                                <li class="navigation-divider"></li>
                                {% block action_table_container %}{% endblock %}
                            </ul>
                        </div>
                    </div>
                    <!-- /action buttons -->
                </div>
            </div>
        </div>
    </div>
{% endblock main_container %}

{% block inline_js %}
    <script type="text/javascript">
        $(document).ready(function () {
            // Setting datatable defaults
            $.extend($.fn.dataTable.defaults, {
                autoWidth: false,
                dom: '<"datatable-header"fl><"datatable-scroll"t><"datatable-footer"ip>',
                language: {
                    search: '<span>Filtre:</span> _INPUT_',
                    lengthMenu: '<span>Nombre:</span> _MENU_',
                    paginate: {'first': 'First', 'last': 'Last', 'next': '&rarr;', 'previous': '&larr;'}
                },
                drawCallback: function () {
                    $(this).find('tbody tr').slice(-3).find('.dropdown, .btn-group').addClass('dropup');
                },
                preDrawCallback: function () {
                    $(this).find('tbody tr').slice(-3).find('.dropdown, .btn-group').removeClass('dropup');
                }
            });
            $('.datatable-responsive').DataTable();
        });
    </script>
{% endblock %}