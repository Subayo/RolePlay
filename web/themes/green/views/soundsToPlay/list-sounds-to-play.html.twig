{% extends "@green/layout-table.html.twig" %}

{% block label_table_container %}
    <th>{{ 'label.id'|trans }}</th
    <th>{{ 'label.datetime'|trans }}</th>
    <th>{{ 'label.pathSound'|trans }}</th>
    <th>{{ 'label.character'|trans }}</th>
{% endblock label_table_container %}

{% block entity_table_container %}
    <td><a href="{{ path('appbundle_sounds_-to_play_view',{'id':entity.id}) }}">{{ entity.id }}</a></td>
    <dd>{{ entity.dateTime|date('d/m/y') }}</dd>
    <dd>{{ entity.pathSound }}</dd>
    <dd>{{ entity.character.name|default('label.na'|trans) }}</dd>
    <td><a href="{{ path('appbundle_sounds_to_play_edit', {'id': entity.id}) }}" class="btn btn-warning btn-labeled btn-xs"><b><i class="icon-pencil"></i></b> {{ 'label.edit'|trans }}</a></td>
    <td>
        <button data-toggle="modal"
                data-target="#modal_theme_danger"
                data-action="{{ path('appbundle_sounds_to_play_remove', {'id' : entity.id}) }}"
                data-message="{{ 'modal.delete'|trans }}"
                data-title="{{ 'modal.title'|trans }} <b>{{ entity.id }}</b>"
                class="btn btn-danger btn-labeled btn-xs"><b><i class="icon-trash"></i></b> {{ 'label.delete'|trans }}</button>
    </td>
{% endblock entity_table_container %}

{% block quick_shortcut_table_container %}
    {% include "@green/soundsToPlay/quick-shortcut-sounds-to-play.html.twig" %}
{% endblock quick_shortcut_table_container %}

{% block action_table_container %}
    {% include "@green/soundsToPlay/action-table-sounds-to-play.html.twig" %}
{% endblock action_table_container %}