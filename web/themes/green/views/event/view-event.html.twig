{% extends "@green/layout-view.html.twig" %}

{% block quick_shortcut_table_container %}
    {% include "@green/event/quick-shortcut-event.html.twig" %}
{% endblock quick_shortcut_table_container %}

{% block action_table_container %}
    {% include "@green/event/action-table-event.html.twig" %}
{% endblock action_table_container %}

{% block entity_view_container %}
    <div class="panel-body">
        <div class="well">
            <dl class="dl-horizontal">
                <dt>{{ 'label.id'|trans }}</dt>
                <dd>{{ entity.id }}</dd>
                <dt>{{ 'label.value'|trans }}</dt>
                <dd>{{ entity.value }}</dd>
                <dt>{{ 'label.datetime'|trans }}</dt>
                <dd>{{ entity.dateTime|date('d/m/y') }}</dd>
                <dt>{{ 'label.play'|trans }}</dt>
                <dd>{{ entity.play }}</dd>
                <dt>{{ 'label.animation'|trans }}</dt>
                <dd>{{ entity.animation.name|default('label.na'|trans) }}</dd>
                <dt>{{ 'label.for'|trans }}</dt>
                <dd>{{ entity.for.name|default('label.na'|trans) }}</dd>
            </dl>
        </div>
    </div>
{% endblock entity_view_container %}

{% block extra_entity_view_container %}

{% endblock %}