{% extends "@green/layout-table.html.twig" %}

{% block label_table_container %}
    <th>{{ 'label.value'|trans }}</th>
    <th>{{ 'label.datetime'|trans }}</th>
    <th>{{ 'label.play'|trans }}</th>
    <th>{{ 'label.animation'|trans }}</th>
    <th>{{ 'label.for'|trans }}</th>
{% endblock label_table_container %}

{% block entity_table_container %}
    <td><a href="{{ path('appbundle_event_view',{'id':entity.id}) }}">{{ entity.id }}</a></td>
    <td>{{ entity.value }}</td>
    <td>{{ entity.dateTime|date('d/m/y') }}</td>
    <td>{{ entity.play }}</td>
    <td>{{ entity.animation.name|default('label.na'|trans) }}</td>
    <td>{{ entity.for.name|default('label.na'|trans) }}</td>
    <td><a href="{{ path('appbundle_event_edit', {'id': entity.id}) }}" class="btn btn-warning btn-labeled btn-xs"><b><i class="icon-pencil"></i></b> {{ 'label.edit'|trans }}</a></td>
    <td>
        <button data-toggle="modal"
                data-target="#modal_theme_danger"
                data-action="{{ path('appbundle_event_remove', {'id' : entity.id}) }}"
                data-message="{{ 'modal.delete'|trans }}"
                data-title="{{ 'modal.title'|trans }} <b>{{ entity.id }}</b>"
                class="btn btn-danger btn-labeled btn-xs"><b><i class="icon-trash"></i></b> {{ 'label.delete'|trans }}</button>
    </td>
{% endblock entity_table_container %}

{% block quick_shortcut_table_container %}
    {% include "@green/event/quick-shortcut-event.html.twig" %}
{% endblock quick_shortcut_table_container %}

{% block action_table_container %}
    {% include "@green/event/action-table-event.html.twig" %}
{% endblock action_table_container %}