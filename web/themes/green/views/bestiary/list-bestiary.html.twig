{% extends "@green/layout-table.html.twig" %}

{% block label_table_container %}
    <th>{{ 'label.name'|trans }}</th>
    <th>{{ 'label.picture'|trans }}</th>
    <th>{{ 'label.hide'|trans }}</th>
    <th>{{ 'label.universe'|trans }}</th>
{% endblock label_table_container %}

{% block entity_table_container %}
    <td><a href="{{ path('appbundle_bestiary_view',{'id':entity.id}) }}">{{ entity.id }}</a></td>
    <td><a href="{{ path('appbundle_bestiary_view',{'id':entity.id}) }}">{{ entity.name }}</a></td>
    <td>{{ entity.picture }}</td>
    <td>{{ entity.hide }}</td>
    <td>{{ entity.universe.name|default('label.na'|trans) }}</td>
    <td><a href="{{ path('appbundle_bestiary_edit', {'id': entity.id}) }}" class="btn btn-warning btn-labeled btn-xs"><b><i class="icon-pencil"></i></b> {{ 'label.edit'|trans }}</a></td>
    <td>
        <button data-toggle="modal"
                data-target="#modal_theme_danger"
                data-action="{{ path('appbundle_bestiary_remove', {'id' : entity.id}) }}"
                data-message="{{ 'modal.delete'|trans }}"
                data-title="{{ 'modal.title'|trans }} <b>{{ entity.id }}</b>"
                class="btn btn-danger btn-labeled btn-xs"><b><i class="icon-trash"></i></b> {{ 'label.delete'|trans }}</button>
    </td>
{% endblock entity_table_container %}

{% block quick_shortcut_table_container %}
    {% include "@green/bestiary/quick-shortcut-bestiary.html.twig" %}
{% endblock quick_shortcut_table_container %}

{% block action_table_container %}
    {% include "@green/bestiary/action-table-bestiary.html.twig" %}
{% endblock action_table_container %}