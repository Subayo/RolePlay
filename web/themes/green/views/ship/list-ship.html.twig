{% extends "@green/layout-table.html.twig" %}

{% block label_table_container %}
    <th>{{ 'label.name'|trans }}</th>
    <th>{{ 'label.picture'|trans }}</th>
    <th>{{ 'label.playerShip'|trans }}</th>
    <th>{{ 'label.type'|trans }}</th>
    <th>{{ 'label.crew'|trans }}</th>
    <th>{{ 'label.shell'|trans }}</th>
    <th>{{ 'label.sail'|trans }}</th>
    <th>{{ 'label.canon'|trans }}</th>
    <th>{{ 'label.cannonball'|trans }}</th>
    <th>{{ 'label.universe'|trans }}</th>
{% endblock label_table_container %}

{% block entity_table_container %}
    <td><a href="{{ path('appbundle_ship_view',{'id':entity.id}) }}">{{ entity.id }}</a></td>
    <td><a href="{{ path('appbundle_ship_view',{'id':entity.id}) }}">{{ entity.name }}</a></td>
    <td><img src="{{ asset('uploads/picture/' ~ entity.picture) }}"></td>
    <td>{{ entity.playerShip }}</td>
    <td>{{ entity.type.name|default('label.na'|trans) }}</td>
    <td>{{ entity.crew }}</td>
    <td>{{ entity.shell }}</td>
    <td>{{ entity.sail }}</td>
    <td>{{ entity.canon }}</td>
    <td>{{ entity.cannonball }}</td>
    <td>{{ entity.universe.name|default('label.na'|trans) }}</td>
    <td><a href="{{ path('appbundle_ship_edit', {'id': entity.id}) }}" class="btn btn-warning btn-labeled btn-xs"><b><i class="icon-pencil"></i></b> {{ 'label.edit'|trans }}</a></td>
    <td>
        <button data-toggle="modal"
                data-target="#modal_theme_danger"
                data-action="{{ path('appbundle_ship_remove', {'id' : entity.id}) }}"
                data-message="{{ 'modal.delete'|trans }}"
                data-title="{{ 'modal.title'|trans }} <b>{{ entity.id }}</b>"
                class="btn btn-danger btn-labeled btn-xs"><b><i class="icon-trash"></i></b> {{ 'label.delete'|trans }}</button>
    </td>
{% endblock entity_table_container %}

{% block quick_shortcut_table_container %}
    {% include "@green/ship/quick-shortcut-ship.html.twig" %}
{% endblock quick_shortcut_table_container %}

{% block action_table_container %}
    {% include "@green/ship/action-table-ship.html.twig" %}
{% endblock action_table_container %}