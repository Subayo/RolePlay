{% extends "@green/layout-table.html.twig" %}

{% block label_table_container %}
    <th>{{ 'label.whisp'|trans }}</th>
    <th>{{ 'label.read'|trans }}</th>
    <th>{{ 'label.datetime'|trans }}</th>
    <th>{{ 'label.character'|trans }}</th>
{% endblock label_table_container %}

{% block entity_table_container %}
    <td><a href="{{ path('appbundle_whisper_view',{'id':entity.id}) }}">{{ entity.id }}</a></td>
    <td>{{ entity.whisp }}</td>
    <td>{{ entity.read }}</td>
    <td>{{ entity.dateTime|date('d/m/Y H:i:s') }}</td>
    <td>{{ entity.character.name|default('label.na'|trans) }}</td>
    <td><a href="{{ path('appbundle_whisper_edit', {'id': entity.id}) }}" class="btn btn-warning btn-labeled btn-xs"><b><i class="icon-pencil"></i></b> {{ 'label.edit'|trans }}</a></td>
    <td>
        <button data-toggle="modal"
                data-target="#modal_theme_danger"
                data-action="{{ path('appbundle_whisper_remove', {'id' : entity.id}) }}"
                data-message="{{ 'modal.delete'|trans }}"
                data-title="{{ 'modal.title'|trans }} <b>{{ entity.id }}</b>"
                class="btn btn-danger btn-labeled btn-xs"><b><i class="icon-trash"></i></b> {{ 'label.delete'|trans }}</button>
    </td>
{% endblock entity_table_container %}

{% block quick_shortcut_table_container %}
    {% include "@green/whisper/quick-shortcut-whisper.html.twig" %}
{% endblock quick_shortcut_table_container %}

{% block action_table_container %}
    {% include "@green/whisper/action-table-whisper.html.twig" %}
{% endblock action_table_container %}