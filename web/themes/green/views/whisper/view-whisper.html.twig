{% extends "@green/layout-view.html.twig" %}

{% block quick_shortcut_table_container %}
    {% include "@green/whisper/quick-shortcut-whisper.html.twig" %}
{% endblock quick_shortcut_table_container %}

{% block action_table_container %}
    {% include "@green/whisper/action-table-whisper.html.twig" %}
{% endblock action_table_container %}

{% block entity_view_container %}
    <div class="panel-body">
        <div class="well">
            <dl class="dl-horizontal">
                <dt>{{ 'label.id'|trans }}</dt>
                <dd>{{ entity.id }}</dd>
                <dt>{{ 'label.whisp'|trans }}</dt>
                <dd>{{ entity.whisp }}</dd>
                <dt>{{ 'label.read'|trans }}</dt>
                <dd>{{ entity.read }}</dd>
                <dt>{{ 'label.datetime'|trans }}</dt>
                <dd>{{ entity.dateTime|date('d/m/Y H:i:s') }}</dd>
                <dt>{{ 'label.character'|trans }}</dt>
                <dd>{{ entity.character.name|default('label.na'|trans) }}</dd>
            </dl>
        </div>
    </div>
{% endblock entity_view_container %}

{% block extra_entity_view_container %}
{% endblock %}